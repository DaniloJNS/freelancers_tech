<div data-team-target="card" class="flex flex-row rounded-full w-full border border-black p-2 gap-4 items-center" 
     id= <%= @profile.id %>>
  <div class="flex-shrink w-12 h-12 bg-black rounded-full"></div>
  <div class="flex-grow flex flex-col">
      <span data-team-target="name" class="text-lg text-gray-800"><%= link_to @profile.name, professional_profile_path(@profile) %></span>
      <span class="text-base text-gray-600"> <%= @profile.age %> anos </span>
  </div>
  <div class="flex-shrink w-12 h-12 flex justify-center items-center">
      <img class="animate-bounce" src="https://img.icons8.com/ios-filled/30/000000/star--v2.png"/>
  </div>
</div>
