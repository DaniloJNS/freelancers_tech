<div class="container mx-auto">
  <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none mx-auto">
  <% if @profile.errors.any? %>
    <ul>
      <% @profile.errors.full_messages.each do |error| %>
        <li> <%= error %> </li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: [current_professional, @profile] do |p|%>
    <%= p.label :name, "Nome", class: "block mb-2 text-sm font-bold text-gray-700" %>
    <%= p.text_field :name, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
    
    <%= p.label :social_name, "Nome social", class: "block mb-2 text-sm font-bold text-gray-700" %>
    <%= p.text_field :social_name, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>

    <%= p.label :description, "Descrição", class: "block mb-2 text-sm font-bold text-gray-700" %>
    <%= p.text_field :description, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>

    <%= p.label :birth_date, "Data de Nascimento", class: "block mb-2 text-sm font-bold text-gray-700" %>
    <%= p.date_field :birth_date, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>

    <%= p.submit "Enviar", class: "w-full px-4 py-2 my-8 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline"%>
  <% end %>
  </div>
</div>
