
<div class="container">
  <aside class="w-1/3 mx-auto bg-white shadow-lg rounded-lg m-3 bg-red-500">
    <% if @projects.empty? %>
      <div class="p-10 text-white text-2xl">
        <p>Ops, você ainda não apresentou propostas na plataforma</p>
        <p class="mt-10">Faça sua primeira proposta agora</p>
      </div>
      <%= link_to "Cadastrar Projeto", public_projects_path, class: 'bg-gray-200 text-2xl text-center 
      block p-2 hover:bg-blue-500 hover:text-white border-t-2 border-black' %>
    <% else %>
      <%= link_to "Minhas submissões", path %>
    <% end %>
  </aside>
  <% @projects.each do |p| %>
    <section class="bg-white rounded-t mx-auto shadow-lg w-4/6 my-2">
      <div class="bg-blue-500 rounded-t px-5 py-1 items-center text-white space-x-1">
        <%= link_to p.title, project_path(p), class: "font-bold text-2xl inline-flex"%>
        <%= link_to "Ver Time", professional_project_team_path(p), class: "font-bold text-2xl inline-flex"%>
        <em class="inline-flex"> <%= p.days_remaining %> dias restantes</em>
      </div>
      <div class="flex px-5 py-6">
        <div class="w-3/4">
          <dd class="px-5 font-semibold">Descrição</dd>
          <dt class="px-10"> <%= p.description %> </dt>
       </div>
       <div>
         <span class="font-semibold"><%=number_to_currency p.average_offer %></span>
         <em>média</em>
         <br>
         <span> Ofertas <%= p.proposals.size %> </span>
       </div>
      </div>
   </section>
  <% end %> 
  <%= link_to 'Voltar', root_path %>
</div>
