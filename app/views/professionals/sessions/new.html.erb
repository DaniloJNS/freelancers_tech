<div class="max-w-md w-full space-y-8 p-10 bg-white rounded-xl z-10 shadow-lg mx-auto my-20">
  <div class="text-center">
      <h2 class="mt-6 text-3xl font-bold text-gray-900">
          Bem-vindo novamente!
      </h2>
      <p class="mt-2 text-sm text-gray-600">Por favor entre na sua conta</p>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"mt-8 space-y-6" ) do |f| %>
          <%= render "professionals/shared/error_messages", resource: resource %>

          <div class="relative">

            <div class="absolute right-0 mt-4"><svg xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>

          <%= f.label :email, class: "text-sm font-bold text-gray-700 tracking-wide" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: " w-full text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" %>
          </div>

          <%= f.label :password, class: "text-sm font-bold text-gray-700 tracking-wide" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: " w-full text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" %>

          <div class="flex items-center justify-between my-5">

	    <div class="flex items-center">
              <% if devise_mapping.rememberable? %>
                    <%= f.check_box :remember_me, class: "h-4 w-4 bg-indigo-500 focus:ring-indigo-400 border-gray-300 rounded" %>
                    <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
              <% end %>
	    </div>

	    <div class="text-sm">
               <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                 <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-indigo-500 hover:text-indigo-500" %><br />
               <% end %>
	    </div>

	  </div>        
 
          <div class="my-5">
          <%= f.submit "Enviar", class:"w-full flex justify-center bg-indigo-500 text-gray-100 p-4  rounded-full tracking-wide
                                font-semibold  focus:outline-none focus:shadow-outline hover:bg-indigo-600 shadow-lg cursor-pointer transition ease-in duration-300" %>
          </div>

         <p class="flex flex-col items-center justify-center mt-10 text-center text-md text-gray-500">
            <span>NÃ£o tem uma conta?</span>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Registre-se agora", new_registration_path(resource_name), class: "text-indigo-500 hover:text-indigo-500no-underline hover:underline cursor-pointer transition ease-in duration-300" %><br />
            <% end %>
         </p>
<% end %>
<%= render "professionals/shared/links" %>
