<div class="container">
  
  <aside class="w-1/3 mx-auto bg-white shadow-lg rounded-lg m-3 bg-red-500">
    <% if @projects.empty? %>
      <div class="p-10 text-white text-2xl">
        <p>Ops, você ainda não cadastrou projetos na plataforma</p>
        <p class="mt-10">Cadastre seu primeiro projeto agora</p>
      </div>
      <%= link_to "Cadastrar Projeto", new_project_path, class: 'bg-gray-200 text-2xl text-center 
      block p-2 hover:bg-blue-500 hover:text-white border-t-2 border-black' %>
    <% end %>
    <%# usar class text-alert do bootstrap aqui%>
  </aside>
  <%= render '/projects/views/user_project', object: @projects %>
  <div class="w-5/6 mx-auto p-2">
    <%= render ButtonComponent.new(text: "Voltar", padding: 2) %>
  </div>
</div>
