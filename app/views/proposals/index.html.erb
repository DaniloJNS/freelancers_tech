
<div class="bg-white shadow-lg text-gray-700 mx-auto w-1/2 container p-4 h-screen rounded">
  <h1 class="text-3xl font-bold text-center">Propostas</h3>
<% @proposals.each do |p| %>
     <section class="bg-white hover:bg-blue-100 rounded-lg p-2 my-2">
       <h2 class = "text-2xl"><strong> <%= p.professional.profile.name %>  </strong></h3> 
       <hr>
       <div class="flex">
          <dl class="flex-grow m-2">
            <dd class="font-semibold mb-1 mt-2">Oferta</dd>
            <dt class="mx-3"><%= number_to_currency p.price_hour %></dt>         
            <dd class="font-semibold mb-1 mt-2">email</dd>
            <dt class= "mx-3"><%= p.professional.email %>
          </dl>
          <div class='flex-none items-center my-4'>
            <%= link_to 'Visualizar Proposta', approval_proposal_path(p), class: "bg-blue-500 border-2 p-1 rounded-lg text-white m-2 
            hover:bg-white hover:text-blue-500 hover:border-2 hover:border-blue-500 focus:ring-4 focus:ring-blue-300" %>
          </div>
       </div>
    </section>
<% end %>
</div>
