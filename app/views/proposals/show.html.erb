<div class="items-center justify-center w-5/6 mx-auto">
        <div class="max-w-4xl  bg-white w-full rounded-lg mx-auto shadow-lg m-10">
        <div class="p-4 border-b flex">
          <div class="flex-grow">
            <h2 class="text-2xl flex">
                Proposta
            </h2>
            <p class="text-sm text-gray-500">
                Detalhes e informações. 
            </p>
          </div>
        </div>
        <div>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4 border-b">
                <p class="text-gray-600 flex">
                    Justificativa
                </p>
                <p>
                  <%= @proposal.justification %>
                </p>
            </div>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4 border-b">
                <p class="text-gray-600">
                  Preço por hora
                </p>
                <p>
                  <%= number_to_currency @proposal.price_hour %>/h
                </p>
            </div>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4 border-b">
                <p class="text-gray-600">
                  Horas por semana
                </p>
                <p>
                  <%= @proposal.weekly_hour %> hrs
                </p>
            </div>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4 border-b">
                <p class="text-gray-600">
                    Prazo de conclusão
                </p>
                <p>
                  <%= @proposal.completion_deadline %> dias
                </p>
            </div>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4 border-b">
                <p class="text-gray-600">
                    Solicitante
                </p>
                <p>
                  <%= @proposal.professional.email %> 
                </p>
            </div>
            <% unless @proposal.pending?%>
            <div class="md:grid md:grid-cols-2 hover:bg-gray-50 md:space-y-0 space-y-1 p-4">
                <p class="text-gray-600">
                    Status
                </p>
                <p>
                  <%= Proposal.human_enum_name(:status, @proposal.status) %>
                </p>
            </div>
            <% end %>
        </div>
</div> 

  <% if @proposal.feedback_for? current_professional %>
    <div class="name">
      <h3>Feedback</h3>
     <%= @proposal.feedback %> 
    </div>
  <% end %>
  <%= render '/proposals/cancel', object: @proposal %>
